<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet"
    integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
<body class="home" style="height: 100vh;">
  <div class="container-fluid display-table" style="padding-left: 0px;padding-right: 0px;">
    <div class="row display-table-row">
      <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
        <div class="logo">
          <a hef="#"><%= image_tag "1.jpg" %></a>
        </div>
        <div class="navi">
          <ul>
            <li class="active">
              <%= render "layouts/menu" %>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-10 col-sm-11 display-table-cell v-align">
        <div class="row">
          <header>
            <div class="col-md-7">
              <nav class="navbar-default pull-left">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas"
                                        data-target="#side-menu" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>
              </nav>
              <div class="search hidden-xs hidden-sm">
                <div style="float:right;">
                  <%= link_to "English", locale:"en" %>
                  <%= link_to "Vietnamese", locale:"vi" %>
                </div>
                <%= form_for :q, url: search_path, method: :get do |form| %>
                  <%= text_field_tag :q, params[:q],placeholder: "Search", id: "search" %>
                <% end %>
              </div>
            </div>
            <div class="col-md-5">
              <div class="header-rightside">
                <ul class="list-inline header-top pull-right">
                  <li class="dropdown">
                    <% if logged_in? %>
                      <%= link_to "#", {class: "dropdown-toggle", "data-toggle": "dropdown"} do %>
                        <%= image_tag "#{current_user.avatar}" %>
                        <b class="caret"></b>
                        <ul class="dropdown-menu">
                          <li>
                            <div class="navbar-content">
                              <span><%= current_user.name %></span>
                              <p class="text-muted small">
                                <%= current_user.email %>
                              </p>
                              <div class="divider">
                              </div>
                              <%= link_to t("views.tag.log_out"), logout_path, class: "view btn-sm active" %>
                            </div>
                          </li>
                        </ul>
                      <% end %>
                    <% else %>
                      <%= image_tag "avatar.png" %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </header>
        </body>
      </div>
